{
  "name": "GistSave",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Save Gists without leaving the edit page",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "https://gist.github.com"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://gist.github.com/*"
      ],
      "js": [
        "scripts/inject.js"
      ]
    }
  ]
}
